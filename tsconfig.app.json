{
  "extends": "./tsconfig.json",
  "compilerOptions": {
      "baseUrl": "src",
      "outDir": "./out-tsc/app",
      "types": [],
      "paths": {
          "@presentation/*": ["presentation/*"],
          "@basic-components/*": ["presentation/basic-components/*"],
          "@features/*": ["presentation/features/*"],
          "@models/*": ["presentation/models/*"],

          "@data/*": ["data/*"],
          "@business-logic/*": ["business-logic/*"],
          "@util/*": ["util/*"]
      }
  },
  "files": [
      "src/main.ts",
      "src/polyfills.ts"
  ],
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "src/test.ts",
      "src/**/*.spec.ts"
  ]
}
