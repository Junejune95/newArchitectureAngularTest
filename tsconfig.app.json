{
  "extends": "./tsconfig.json",
  "compilerOptions": {
      "baseUrl": "src",
      "outDir": "./out-tsc/app",
      "types": [],
      "paths": {
          "@ui/*": ["ui/*"],
          "@pipes/*": ["ui/pipes/*"],
          "@basic-components/*": ["ui/basic-components/*"],
          "@compound-components/*": ["ui/compound-components/*"],
          "@containers/*": ["ui/containers/*"],

          "@data/*": ["data/*"],
          "@service/*": ["service/*"]
      }
  },
  "files": [
      "src/main.ts",
      "src/polyfills.ts"
  ],
  "include": [
      "src/**/*.ts" 
  ],
  "exclude": [
      "src/test.ts",
      "src/**/*.spec.ts"
  ]
}
